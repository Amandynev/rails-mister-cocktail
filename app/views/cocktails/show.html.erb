<div class="container-cocktail">
  <h2><%= @cocktail.name %></h2>
  <div class="card" style="width: 18rem;">
    <img class="card-img-top" src="<%= @cocktail.image_url %>" alt="Card image cap">
    <% @cocktail.doses.each do |dose| %>
      <div class="description h-100">
         <%= dose.ingredient.name %>
         <%= dose.description %>
         <%= link_to dose_path(dose), method: :delete,
            data: { confirm: "Are you sure?" } do %>
              <i class="fas fa-trash-alt"></i>
            <% end %>
      </div>
    <% end %>

  </div>



  <button> <%= link_to "New dose", new_cocktail_dose_path(@cocktail) %> </button>
  </div>
</div>




