
<div class="banner"
     style="background-image: url('<%= cl_image_path(@cocktail.photo.key) %>');">
  <div class="container">

    <h1> <%= @cocktail.name.capitalize %> </h1>
      <% @cocktail.doses.each do |dose| %>
      <div class="icons d-flex inline p-2">
        <p> <%= dose.ingredient.name %> <%= dose.description %> </p>
           <%= link_to dose_path(dose),
                       method: :delete,
                       data: { confirm: "Are you sure?" } do %>
                <i class="fas fa-trash-alt m-2"></i>
              <% end %>

           <%= link_to new_cocktail_dose_path(@cocktail) do %>
              <i class="fas fa-plus m-2"></i>
              <% end %>
        <% end %>
      </div>
  </div>
</div>




