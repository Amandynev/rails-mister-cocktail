

  <div class="container">
    <h2> All cocktails </h2>
    <div class="row">
      <% @cocktails.each do |cocktail| %>
        <div class="col-sm-12 col-md-6 col-lg-4">
          <div class="card" style="width: 18rem;">
            <div class="img-size d-flex justify-content-center align-items-center"
                 style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cocktail.image_url %>')">
              <h5 class="card-title"><strong><%= link_to cocktail.name.capitalize, cocktail_path(cocktail)%></strong></h5>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <button><%= link_to  "New cocktail", new_cocktail_path %></button>
</div>








